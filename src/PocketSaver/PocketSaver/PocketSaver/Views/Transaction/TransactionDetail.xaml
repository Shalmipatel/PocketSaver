        <ToolbarItem x:Name="editButton" Text="EDIT" Order="Primary" Clicked="editButton_Clicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="transactionDetail" HasUnevenRows="True" Margin="2,0,2,0" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>