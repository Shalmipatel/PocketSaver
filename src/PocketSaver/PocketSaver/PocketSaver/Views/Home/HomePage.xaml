<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PocketSaver.Views.Home.HomePage">
    <ContentPage.Content>


        <Grid HorizontalOptions="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackLayout>
                <Label Text="Amount:" />
                <Label x:Name="Amount" Text="$0.00" Grid.Row="1" Grid.Column="0" FontSize = "90" VerticalTextAlignment="Center"/>
                <Label Text="Select one of the following options:" />
                <Picker x:Name="monthPicker" HorizontalOptions="FillAndExpand"/>
                
                <Label Text="Budget summary:" />
                <Label x:Name="budget" Text="default" Grid.Row="2" Grid.Column="0" FontSize = "30"/>
                <Label x:Name="remaining" Text="Remaining budget for the month:" />
                <Label x:Name="remainingBudget" Text="default" Grid.Row="2" Grid.Column="0" FontSize = "30" VerticalTextAlignment="Center"/>

            </StackLayout>
            
           
        </Grid>
    </ContentPage.Content>
    
</ContentPage>